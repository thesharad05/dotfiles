# i3wm Configuration: ~/.config/i3/config

font pango:FiraMono Nerd Font 10

set $mod Mod4

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4

bindsym $mod+Return exec alacritty
bindsym $mod+d exec rofi -show drun
bindsym $mod+w exec firefox
bindsym $mod+m exec mpv --player-operation-mode=pseudo-gui
bindsym $mod+n exec mousepad
bindsym $mod+e exec thunar
bindsym $mod+Shift+n exec pkexec mousepad
bindsym $mod+Shift+e exec pkexec thunar

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Control+h resize shrink width 10 px or 10 ppt
bindsym $mod+Control+j resize grow height 10 px or 10 ppt
bindsym $mod+Control+k resize shrink height 10 px or 10 ppt
bindsym $mod+Control+l resize grow width 10 px or 10 ppt

bindsym $mod+space floating toggle
bindsym $mod+q kill
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout toggle split
bindsym $mod+v splitv

bindsym $mod+r reload
bindsym $mod+Shift+r restart

bindsym Print exec scrot ~/Pictures/screenshot_%Y-%m-%d-%T.png

gaps inner 10
gaps outer 10

exec --no-startup-id feh --bg-scale ~/Pictures/wall.jpg
exec --no-startup-id nm-applet
exec --no-startup-id pulseaudio --start
exec --no-startup-id picom
exec --no-startup-id polybar
exec --no-startup-id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id dunst
